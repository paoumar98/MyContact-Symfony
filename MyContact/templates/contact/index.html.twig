{% extends 'base.html.twig' %}

{% block title 'My Contacts' %}
{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.findContactByPrenom) }}
                </div>
                <div class="col">
                    {{ form_row(form.findContactByNom) }}
                </div>
                <div class="col">
                    {{ form_row(form.findContactByNumero) }}
                </div>
                <div class="col">
                    <button class="btn btn-primary">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">

        <h1>Mes Contacts</h1>
        <div class="row">


            {% for contact in contacts %}
                <div class="col-md-3">
                    {% include 'contact/_contact.html.twig' %}
                </div>
            {% endfor %}

        </div>

        <div class="navigation">
            {{ knp_pagination_render(contacts) }}
        </div>

    </div>

{% endblock %}